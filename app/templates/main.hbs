<h1>Main Page</h1>

{{input 
    type="email" 
    value=emailAddress 
    placeholder="e-mail address!!" 
    autofocus="autofocus"}}

{{#unless isValid}}
    <br />
    <span class="error-main">Email Not Valid</span>
{{/unless}}

<br />
<button 
    disabled={{isDisabled}}
    {{action 'saveInvitation'}}
>
    Request invitation
</button>